<resources>
    <!-- Базова тема додатку -->
    <style name="Base.Theme.ViewGroups" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <!-- Основна тема додатку -->
    <style name="Theme.ViewGroups" parent="Base.Theme.ViewGroups" />

    <!-- Базовий стиль для кнопок -->
    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#0D6DBA</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="maxWidth">250dp</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>